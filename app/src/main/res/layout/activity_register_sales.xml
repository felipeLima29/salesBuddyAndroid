<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".view.RegisterSalesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingLeft="35dp"
        android:paddingTop="120dp"
        android:paddingRight="35dp"
        android:paddingBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_register_sales"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="100dp"
                android:paddingLeft="15dp">

                <EditText
                    android:id="@+id/txClientName"
                    android:layout_width="match_parent"
                    android:layout_height="115px"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edit_text"
                    android:textColorHint="@color/txInput"
                    android:fontFamily="@font/montserrat_regular"
                    android:ems="10"
                    android:hint="NOME CLIENTE"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/txCpf"
                    android:layout_width="match_parent"
                    android:layout_height="115px"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edit_text"
                    android:textColorHint="@color/txInput"
                    android:fontFamily="@font/montserrat_regular"
                    android:ems="10"
                    android:hint="CPF"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/txEmail"
                    android:layout_width="match_parent"
                    android:layout_height="115px"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edit_text"
                    android:textColorHint="@color/txInput"
                    android:fontFamily="@font/montserrat_regular"
                    android:ems="10"
                    android:hint="E-MAIL"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txItemName"
                        android:layout_width="0dp"
                        android:layout_height="115px"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/border_edit_text"
                        android:textColorHint="@color/txInput"
                        android:fontFamily="@font/montserrat_regular"
                        android:ems="10"
                        android:hint="ITEM 01"
                        android:inputType="text"
                        android:paddingLeft="20dp" />

                    <ImageButton
                        android:id="@+id/btnAddItem"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/button_add_item"
                        android:src="@drawable/ic_add_item"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/txSaleValue"
                    android:layout_width="match_parent"
                    android:layout_height="115px"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edit_text"
                    android:textColorHint="@color/txInput"
                    android:fontFamily="@font/montserrat_regular"
                    android:ems="10"
                    android:hint="VALOR VENDA"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/txReceivedValue"
                    android:layout_width="match_parent"
                    android:layout_height="115px"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_edit_text"
                    android:textColorHint="@color/txInput"
                    android:fontFamily="@font/montserrat_regular"
                    android:ems="10"
                    android:hint="VALOR RECEBIDO"
                    android:inputType="text"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:id="@+id/containerProdutos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegiSter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_register_sale"
                android:fontFamily="@font/montserrat_bold"
                android:text="IR PARA RESUMO"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>